---
import MainLayout from "../layouts/MainLayout.astro";
import SectionTitle from "../components/ui/SectionTitle.astro";
import Form from "../components/ui/Form.astro";

// Web & App Design Services (SVG icons)
const designServices = [
  {
    image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/layout-dashboard.svg",
    title: "UI/UX Design",
    desc: "Intuitive, beautiful interfaces for web and mobile apps."
  },
  {
    image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/device-mobile.svg",
    title: "Mobile App Design",
    desc: "iOS and Android app design for seamless cross-device experiences."
  },
  {
    image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/code.svg",
    title: "Web App Design",
    desc: "Custom web applications designed for performance and usability."
  },
  {
    image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/brand-figma.svg",
    title: "Prototyping & Wireframing",
    desc: "Clickable prototypes and wireframes to validate ideas fast."
  },
  {
    image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/paint.svg",
    title: "Branding & Visual Identity",
    desc: "Logo, color, and style guides for a cohesive digital presence."
  },
  {
    image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/rocket.svg",
    title: "Design Systems",
    desc: "Reusable components and documentation for scalable design."
  },
  {
    image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/refresh.svg",
    title: "Continuous Optimisation",
    desc: "Ongoing design improvements based on analytics and feedback."
  },
  {
    image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/accessibility.svg",
    title: "Accessibility & Compliance",
    desc: "WCAG, ADA, and best practices for inclusive digital products."
  }
];

// Why it matters (SVG icons)
const whyMatters = [
  { image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/user.svg", title: "User-Centric", desc: "Delight users with intuitive, accessible experiences." },
  { image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/rocket.svg", title: "Faster Launches", desc: "Streamlined process from idea to launch." },
  { image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/currency-dollar.svg", title: "Better ROI", desc: "Design that drives engagement and conversions." },
  { image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/paint.svg", title: "Brand Consistency", desc: "Unified look and feel across all platforms." }
];

// Approach steps (timeline)
const approach = [
  { icon: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/compass.svg", title: "Discovery & Research", desc: "We analyze your goals, users, and competitors to inform design." },
  { icon: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/bulb.svg", title: "Ideation & Wireframing", desc: "We sketch, wireframe, and prototype to validate concepts." },
  { icon: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/layout-dashboard.svg", title: "UI Design & Handoff", desc: "We design pixel-perfect interfaces and hand off to development." },
  { icon: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/rocket.svg", title: "Launch & Optimise", desc: "We support launch and iterate based on real user feedback." }
