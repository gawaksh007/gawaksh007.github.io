import Card from "../components/ui/Card.astro";
import propImg from "../../src/assets/pics/proposal-pic.png";

// Web Development Services
const webServices = [
  {
    title: "Frontend Development",
    description: "Creating beautiful, responsive user interfaces that delight your users",
    features: ["React/Vue/Angular", "Modern CSS/Tailwind", "Progressive Web Apps"],
