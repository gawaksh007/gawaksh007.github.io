---
import MainLayout from "../layouts/MainLayout.astro";
import SectionTitle from "../components/ui/SectionTitle.astro";
import Form from "../components/ui/Form.astro";

// SEO Services (expanded, using monochrome SVG icons)
const seoServices = [
  {
    image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/settings.svg",
    title: "Technical SEO Audits",
    desc: "Comprehensive site audits, speed optimization, mobile-friendliness, and crawl error fixes."
  },
  {
    image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/file-text.svg",
    title: "Content Strategy & Optimization",
    desc: "Keyword research, content gap analysis, and on-page SEO for high-performing landing pages and blogs."
  },
  {
    image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/map-pin.svg",
    title: "Local SEO",
    desc: "Google Business Profile optimization, local citations, and review management to win local searches."
  },
  {
    image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/link.svg",
    title: "Link Building & Authority",
    desc: "White-hat outreach, digital PR, and high-quality backlink acquisition for lasting authority."
  },
  {
    image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/chart-bar.svg",
    title: "Analytics & Reporting",
    desc: "Custom dashboards, rank tracking, and actionable insights to measure and improve ROI."
  },
  {
    image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/zoom-question.svg",
    title: "SEO Consulting & Training",
    desc: "Workshops, strategy sessions, and ongoing support for your in-house team."
  }
];

// Why SEO Matters
const whyMatters = [
  { image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/search.svg", title: "Visibility", desc: "Be found by the right people at the right time—when they’re searching for you." },
  { image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/rocket.svg", title: "Sustainable Growth", desc: "SEO delivers compounding results and long-term ROI." },
  { image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/target.svg", title: "Qualified Traffic", desc: "Attract visitors who are ready to convert, not just browse." },
  { image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/award.svg", title: "Credibility & Trust", desc: "Top rankings signal authority and build trust with your audience." }
];

// Approach steps
const approach = [
  { icon: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/compass.svg", title: "SEO Audit & Discovery", desc: "We analyze your site, competitors, and market to uncover opportunities." },
  { icon: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/bulb.svg", title: "Strategy & Roadmap", desc: "We build a custom SEO plan with clear priorities and KPIs." },
  { icon: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/rocket.svg", title: "Implementation", desc: "We optimize, create, and build—on-page, off-page, and technical." },
  { icon: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/chart-bar.svg", title: "Measurement & Reporting", desc: "We track progress, report results, and refine for ongoing growth." }
];

// Case studies (placeholder)
const cases = [
  {
    client: "FinTech Pro",
    logo: "/fintech-logo.png",
    summary: "Technical SEO overhaul and content strategy for a SaaS fintech platform.",
    outcome: "+120% organic traffic in 8 months",
    quote: "“We saw a dramatic increase in qualified leads and search visibility.”"
  },
  {
    client: "Local Eats",
    logo: "/localeats-logo.png",
    summary: "Local SEO and review management for a multi-location restaurant chain.",
    outcome: "+300% local search impressions",
    quote: "“Our locations now dominate Google Maps and local search.”"
  }
];

// FAQs
const faqs = [
  {
    q: "How long does it take to see SEO results?",
    a: "Most clients see measurable improvements in 2–4 months, with compounding growth over time."
  },
  {
    q: "Do you work with existing websites or only new builds?",
    a: "We optimize both existing sites and new projects—no matter your CMS or stack."
  },
  {
    q: "Is link building safe?",
    a: "We use only white-hat, Google-compliant tactics for sustainable authority."
  },
  {
    q: "Can you train our in-house team?",
    a: "Yes, we offer SEO workshops and ongoing consulting for your staff."
  },
  {
    q: "What’s included in your SEO audit?",
    a: "Technical, content, and competitive analysis with a prioritized action plan."
  }
];
---
<MainLayout title="SEO & Business Findability - Tagorithm">
  <main class="space-y-24 md:space-y-36">

    <!-- Hero Section -->
    <section class="relative min-h-[80vh] flex items-center bg-gradient-to-br from-black via-[#1A2238] to-[#1A2238] overflow-hidden">
      <div class="absolute inset-0 pointer-events-none">
        <div class="absolute -top-32 -left-32 w-[400px] h-[400px] bg-[#1A2238]/40 rounded-full blur-3xl animate-float"></div>
        <div class="absolute bottom-0 right-0 w-[300px] h-[300px] bg-black/30 rounded-full blur-2xl animate-float2"></div>
      </div>
      <div class="container mx-auto px-4 relative z-10 flex flex-col items-center text-center gap-8">
        <h1 class="text-4xl md:text-6xl font-extrabold text-white leading-tight drop-shadow-lg">
          SEO & Business Findability
        </h1>
        <p class="text-lg md:text-2xl text-[#B9DD8C] max-w-2xl mx-auto">
          Make your website the first thing your customers see when they search. We blend technical expertise, content, and outreach for sustainable growth.
        </p>
        <a href="#contact" class="btn-primary px-8 py-4 text-lg shadow-lg hover:scale-105 transition-transform">Get My Free SEO Audit</a>
        <span class="mt-8 animate-bounce text-[#84C341] text-3xl">&#8595;</span>
      </div>
    </section>

    <!-- What We Do -->
    <section class="container mx-auto px-4">
      <SectionTitle sectionTitle="What We Do" description="Every layer of your SEO strategy, handled end-to-end." />
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 mt-10">
        {seoServices.map(s => (
          <div class="bg-white rounded-2xl p-6 flex flex-col items-center text-center shadow-md hover:shadow-xl border-t-4 border-transparent hover:border-[#84C341] transition-all group hover:scale-105">
            <img src={s.image} alt={s.title} class="w-12 h-12 mb-4 opacity-90 transition-transform group-hover:scale-110" style="filter: grayscale(1);" loading="lazy" />
            <h3 class="text-lg font-bold mb-2 text-[#84C341]">{s.title}</h3>
            <p class="text-gray-600">{s.desc}</p>
          </div>
        ))}
      </div>
    </section>

    <!-- Why It Matters -->
    <section class="container mx-auto px-4">
      <SectionTitle sectionTitle="Why SEO Matters" />
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-8 mt-10">
        {whyMatters.map(item => (
          <div class="bg-white rounded-xl p-6 flex flex-col items-center text-center shadow-sm border border-[#84C341]/40 hover:shadow-md transition-shadow">
            <img src={item.image} alt={item.title} class="w-10 h-10 mb-3 opacity-90 transition-transform group-hover:scale-110" style="filter: grayscale(1);" loading="lazy" />
            <h4 class="font-semibold mb-1 text-[#84C341]">{item.title}</h4>
            <p class="text-gray-600 text-sm">{item.desc}</p>
          </div>
        ))}
      </div>
    </section>

    <!-- Our Approach (Redesigned Timeline) -->
    <section class="container mx-auto px-4">
      <SectionTitle sectionTitle="Our Proven SEO Process" description="A transparent, data-driven journey from audit to results." />
      <div class="relative flex flex-col md:flex-row items-center justify-center gap-8 mt-12">
        {approach.map((step, i) => (
          <div class="relative z-10 flex flex-col items-center text-center group transition-transform duration-300 hover:scale-105" style={`animation: fadeInUp 0.6s ${i * 0.1 + 0.2}s both`}>
            <div class="w-16 h-16 bg-white border-4 border-[#84C341] rounded-full flex items-center justify-center shadow-lg mb-4">
              <img src={step.icon} alt={step.title} class="w-8 h-8" style="filter: grayscale(1);" />
            </div>
            <div class="font-bold text-[#84C341] text-lg mb-1">{step.title}</div>
            <div class="text-gray-600 text-sm max-w-xs">{step.desc}</div>
          </div>
        ))}
      </div>
    </section>

    <!-- Case Studies -->
    <section class="container mx-auto px-4">
      <SectionTitle sectionTitle="Case Studies" description="Real results from real brands." />
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-10">
        {cases.map(cs => (
          <div class="bg-white rounded-2xl p-6 shadow-lg flex flex-col gap-4 border border-[#84C341]/40 hover:shadow-xl transition-shadow">
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 bg-[#84C341]/20 rounded-full flex items-center justify-center">
                {cs.logo ? <img src={cs.logo} alt={cs.client + ' logo'} class="w-8 h-8 object-contain" style="filter: grayscale(1);" /> : <span class="font-bold text-lg">{cs.client[0]}</span>}
              </div>
              <div>
                <h4 class="font-bold text-[#307B1C]">{cs.client}</h4>
                <p class="text-sm text-gray-500">{cs.summary}</p>
              </div>
            </div>
            <div class="text-[#84C341] font-semibold animate-countup">{cs.outcome}</div>
            <blockquote class="italic text-gray-700 border-l-4 border-[#84C341] pl-4">{cs.quote}</blockquote>
          </div>
        ))}
      </div>
    </section>

    <!-- FAQs -->
    <section class="container mx-auto px-4">
      <SectionTitle sectionTitle="FAQs" />
      <div class="max-w-2xl mx-auto mt-8 space-y-4">
        {faqs.map((faq, i) => (
          <details class="bg-white rounded-xl shadow p-4 group border border-[#84C341]/40 transition-all duration-300" open={i === 0}>
            <summary class="font-semibold cursor-pointer outline-none group-open:text-[#84C341] transition-colors">{faq.q}</summary>
            <div class="mt-2 text-gray-600">{faq.a}</div>
          </details>
        ))}
      </div>
    </section>

    <!-- Final CTA Banner -->
    <section class="w-full bg-gradient-to-br from-black via-[#1A2238] to-[#1A2238] py-16 mt-12">
      <div class="container mx-auto px-4 flex flex-col md:flex-row items-center justify-between gap-8">
        <div class="space-y-4 md:w-2/3">
          <h2 class="text-2xl md:text-3xl font-bold text-[#84C341]">Ready to climb the search results?</h2>
          <p class="text-lg text-[#84C341]">Let’s build an SEO strategy that drives traffic, leads, and revenue for your business.</p>
        </div>
        <a href="#contact" class="btn-primary px-8 py-4 text-lg shadow-lg hover:scale-105 transition-transform">Schedule a Free Consultation</a>
      </div>
    </section>

    <!-- Contact Form -->
    <section id="contact" class="container mx-auto px-4 py-16">
      <SectionTitle sectionTitle="Talk to Our SEO Experts" description="Share your goals, and we’ll show you how to get there." />
      <Form />
    </section>
  </main>
</MainLayout>

<style>
  .btn-primary {
    @apply bg-[#84C341] text-white font-bold rounded-full px-6 py-3 transition-colors hover:bg-white hover:text-[#84C341] focus:outline-none focus:ring-2 focus:ring-[#84C341];
  }
  .highlight {
    background-color: #84C341;
    color: #1A2238;
    padding: 0 0.02em;
    border-radius: 0.4em;
    text-shadow:
      -1px -1px 0 #fff,
       1px -1px 0 #fff,
      -1px  1px 0 #fff,
       1px  1px 0 #fff;
    -webkit-text-stroke: 0.5px #1A2238;
  }
  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(40px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .animate-float {
    animation: float 8s ease-in-out infinite alternate;
  }
  .animate-float2 {
    animation: float2 10s ease-in-out infinite alternate;
  }
  @keyframes float {
    0% { transform: translateY(0) scale(1); }
    100% { transform: translateY(-30px) scale(1.05); }
  }
  @keyframes float2 {
    0% { transform: translateY(0) scale(1); }
    100% { transform: translateY(20px) scale(1.08); }
  }
  .animate-countup {
    animation: countup 1.2s cubic-bezier(0.23, 1, 0.32, 1) both;
  }
  @keyframes countup {
    from { opacity: 0; transform: scale(0.8); }
    to { opacity: 1; transform: scale(1); }
  }
</style>