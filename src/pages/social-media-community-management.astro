---
<MainLayout title="Social Media & Community Management - Tagorithm">
  <main class="overflow-hidden">
    <!-- Hero Section -->
    <section class="relative min-h-[92vh] flex items-center bg-dark">
      <!-- Background elements -->
      <div class="absolute inset-0 overflow-hidden">
        <img 
          src="/src/assets/bars.svg" 
          alt="Background Pattern"
          class="absolute top-0 left-0 w-full h-full object-cover opacity-[0.03]"
        />
        
        <!-- Animated gradient orbs -->
        <div class="absolute inset-0 overflow-hidden pointer-events-none">
          <div class="absolute -top-40 -left-40 w-[600px] h-[600px] bg-gradient-to-r from-green/30 to-[#66FFB9]/30 rounded-full blur-[128px] animate-float"></div>
          <div class="absolute -bottom-20 -right-20 w-[600px] h-[600px] bg-gradient-to-l from-[#66FFB9]/20 to-green/20 rounded-full blur-[128px] animate-float-delayed"></div>
        </div>
      </div>

      <!-- Content -->
      <div class="container mx-auto px-4 relative z-10">
        <div class="flex flex-col md:flex-row items-center gap-12">
          <!-- Left: Content -->
          <div class="w-full md:w-1/2 text-center md:text-left space-y-8">
            <h1 class="text-4xl md:text-7xl font-bold leading-tight text-white">
              Grow Your <span class="text-green">Social</span> Presence
            </h1>
            <p class="text-xl md:text-2xl text-gray mb-8 max-w-xl">
              Strategic social media management that builds communities and drives engagement.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
              <a href="#contact" class="btn-primary text-lg px-8 py-4">Start Growing</a>
              <a href="#services" class="btn-secondary text-lg px-8 py-4">Explore Services</a>
            </div>
          </div>
          
          <!-- Right: Visual -->
          <div class="w-full md:w-1/2 relative">
            <div class="relative w-full aspect-square">
              <div class="absolute inset-0 bg-gradient-to-br from-[#B9FF66]/20 to-[#66FFB9]/20 rounded-full blur-3xl animate-pulse"></div>
              <img 
                src="/smm.png" 
                alt="Social Media Management Visualization" 
                class="relative z-10 w-full h-full object-contain transform hover:scale-105 transition-transform duration-500"
              />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section id="services" class="py-24 bg-white relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-b from-gray/50 to-white pointer-events-none"></div>
      <div class="container mx-auto px-4 relative">
        <div class="max-w-3xl mx-auto text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold mb-6 text-black">Social Media Services</h2>
          <p class="text-xl text-gray">Strategic solutions for your social presence</p>
        </div>
        
        <div class="grid md:grid-cols-2 gap-8">
          {socialServices.map((service) => (
            <div class="group relative bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-500 overflow-hidden border border-gray">
              <!-- Gradient background -->
              <div class={`absolute inset-0 bg-gradient-to-r ${service.gradient} opacity-0 group-hover:opacity-5 transition-opacity duration-500`}></div>
              
              <!-- Content -->
              <div class="relative z-10">
                <div class="flex items-start gap-6">
                  <div class="text-4xl w-16 h-16 flex items-center justify-center rounded-xl bg-gradient-to-br from-gray to-white group-hover:scale-110 transition-transform duration-500">
                    {service.icon}
                  </div>
                  <div class="flex-1">
                    <h3 class="text-2xl font-bold mb-4 text-black">{service.title}</h3>
                    <p class="text-gray mb-6 text-lg">{service.description}</p>
                    
                    <div class="space-y-3">
                      {service.features.map(feature => (
                        <div class="flex items-center gap-3">
                          <span class="w-2 h-2 rounded-full bg-green"></span>
                          <span class="text-dark">{feature}</span>
                        </div>
                      ))}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Tech Stack Section -->
    <section class="py-24 bg-gray/50">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold mb-6 text-black">Our Social Tools</h2>
          <p class="text-xl text-gray">Industry-leading tools for maximum impact</p>
        </div>

        <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
          {socialStack.map(category => (
            <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300">
              <div class="flex items-center gap-4 mb-6">
                <span class="text-4xl">{category.icon}</span>
                <h3 class="text-2xl font-bold text-black">{category.category}</h3>
              </div>

              <div class="space-y-6">
                {category.techs.map(tech => (
                  <div>
                    <div class="flex justify-between mb-2">
                      <span class="font-medium text-dark">{tech.name}</span>
                      <span class="text-gray">{tech.level}%</span>
                    </div>
                    <div class="h-2 bg-gray/10 rounded-full overflow-hidden">
                      <div 
                        class="h-full bg-gradient-to-r from-green to-[#66FFB9] rounded-full transition-all duration-500"
                        style={`width: ${tech.level}%`}
                      ></div>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-24 bg-dark relative overflow-hidden">
      <div class="absolute inset-0">
        <div class="absolute top-0 left-0 w-full h-full bg-[url('/src/assets/bars.svg')] bg-repeat opacity-[0.03]"></div>
      </div>
      
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">Ready to Amplify Your Social Presence?</h2>
          <p class="text-xl text-gray mb-12">Let's create engaging content that builds your community</p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="#contact" class="btn-primary text-lg px-8 py-4">Start Your Campaign</a>
            <a href="#services" class="btn-secondary text-lg px-8 py-4">Learn More</a>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Form Section -->
    <section id="contact" class="py-24">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <SectionTitle
            sectionTitle="Get Started"
            description="Tell us about your social media goals and let's begin growing"
          />
          <Form />
        </div>
      </div>
    </section>
  </main>
</MainLayout>

<style>
  .btn-primary {
    @apply inline-flex items-center justify-center bg-green text-dark font-semibold rounded-full hover:bg-[#66FFB9] transition-all duration-300;
  }

  .btn-secondary {
    @apply inline-flex items-center justify-center bg-white/10 text-white font-semibold rounded-full hover:bg-white/20 transition-all duration-300 backdrop-blur-sm;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-20px); }
  }

  @keyframes float-delayed {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-20px); }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  .animate-float-delayed {
    animation: float 6s ease-in-out infinite;
    animation-delay: 3s;
  }
</style>