const approach = [
  { icon: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/compass.svg", title: "Discovery & Audit", desc: "We review your current analytics, data flows, and business goals." },
  { icon: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/bulb.svg", title: "Strategy & Planning", desc: "We design a measurement plan and select the right tools for your needs." },
  { icon: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/chart-bar.svg", title: "Implementation & QA", desc: "We set up, test, and validate all tracking and reporting." },
