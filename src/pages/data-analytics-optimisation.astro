  { image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/eye-search.svg", title: "Clarity & Insight", desc: "See what’s working, what’s not, and where to focus next." },
  { image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/rocket.svg", title: "Faster Growth", desc: "Data-driven decisions accelerate results and reduce waste." },
  { image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/currency-dollar.svg", title: "Better ROI", desc: "Optimize spend and maximize every marketing dollar." },
  { image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/shield-check.svg", title: "Trust & Compliance", desc: "Accurate, privacy-first data you and your customers can trust." }
