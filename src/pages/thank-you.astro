---
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from "astro:assets";
import thankYouImg from "../assets/pics/thank-you.png";
---

<MainLayout title="Thank You - Message Sent">
  <main class="min-h-[80vh] flex items-center justify-center bg-[#F8FFF3]">
    <section class="w-full max-w-2xl mx-auto flex flex-col items-center gap-8 py-16 px-4 rounded-3xl shadow-lg bg-white/90 border border-[#B9FF66]/30">
      <div class="relative">
        <div class="absolute -top-8 -left-8 w-24 h-24 bg-[#B9FF66]/20 rounded-full blur-2xl"></div>
        <div class="absolute -bottom-8 -right-8 w-24 h-24 bg-[#66FFB9]/20 rounded-full blur-2xl"></div>
        <Image
          src={thankYouImg}
          alt="Thank you illustration"
          class="w-48 h-48 mx-auto z-10 relative"
        />
      </div>
      <h1 class="text-4xl md:text-5xl font-extrabold tracking-tight mb-2 text-gray-900 drop-shadow text-center">
        Thank You for Reaching Out!
      </h1>
      <p class="text-xl text-gray-600 mb-4 text-center">
        We've received your message and will get back to you within 24 hours.
      </p>
      <div class="w-full flex flex-col items-center gap-4">
        <p class="text-lg text-gray-700">While you wait, feel free to:</p>
        <div class="flex flex-col sm:flex-row justify-center gap-4 w-full">
          <a href="/articles" class="btn-primary w-full sm:w-auto text-center">
            Read Our Blog
          </a>
          <a href="/" class="btn-secondary w-full sm:w-auto text-center">
            Back to Home
          </a>
        </div>
      </div>
    </section>
  </main>
</MainLayout>

<style>
  .btn-primary {
    @apply bg-[#B9FF66] text-black font-bold rounded-full px-8 py-3 transition-colors hover:bg-black hover:text-[#B9FF66] focus:outline-none focus:ring-2 focus:ring-[#B9FF66];
    text-decoration: none;
    box-shadow: 0 2px 16px 0 #b9ff6633;
  }
  .btn-secondary {
    @apply bg-white border border-[#B9FF66] text-black font-bold rounded-full px-8 py-3 transition-colors hover:bg-[#B9FF66] hover:text-black focus:outline-none focus:ring-2 focus:ring-[#B9FF66];
    text-decoration: none;
    box-shadow: 0 2px 16px 0 #b9ff6611;
  }
</style>