// Redesigned Approach: Timeline with icons and subtle animation
const approach = [
  { icon: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/compass.svg", title: "Discovery & Audit", desc: "We analyze your current brand, audience, and competitors to uncover opportunities." },
  { icon: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/bulb.svg", title: "Strategy & Messaging", desc: "We define your positioning, story, and tone of voice for maximum impact." },
