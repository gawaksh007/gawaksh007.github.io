  },
  {
    image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/volume.svg",
    title: "Tone of Voice Development",
    desc: "Define how your brand sounds everywhere—ensuring consistency and authenticity."
  },
  {
    image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/palette.svg",
    title: "Visual Language & Style Guides",
    desc: "Build a cohesive visual identity with guidelines for every channel and touchpoint."
  },
  {
    image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/users-group.svg",
    title: "Internal Brand Alignment",
    desc: "Align your team with workshops, audits, and training for a unified brand experience."
  },
  {
    image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/flag.svg",
    title: "Brand Positioning & Architecture",
    desc: "Define your unique market position and structure your brand portfolio for clarity and growth."
  },
  {
    image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/book.svg",
    title: "Brand Storytelling",
    desc: "Develop compelling narratives that connect emotionally and drive engagement."
  },
  {
    image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/refresh.svg",
    title: "Rebranding & Brand Refresh",
    desc: "Modernize your identity and messaging for new markets or audiences."
  },
  {
    image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/search.svg",
    title: "Brand Audit & Competitive Analysis",
    desc: "In-depth review of your brand’s strengths, weaknesses, and market opportunities."
  }
];

// Why it matters (monochrome icons)
const whyMatters = [
  { image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/brain.svg", title: "Better Recall", desc: "Memorable brands are consistent in message and look." },
  { image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/link.svg", title: "Cross-Channel Consistency", desc: "Every touchpoint feels familiar and trustworthy." },
  { image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/shield-check.svg", title: "Increased Trust", desc: "Clear, authentic communication builds lasting relationships." },
  { image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/heart.svg", title: "Emotional Connection", desc: "Stories and visuals that spark real audience loyalty." }
