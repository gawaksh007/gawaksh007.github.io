  },
  {
    image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/video.svg",
    title: "Video & Visual Content",
    desc: "Engaging video, infographics, and visual assets tailored to your brand and audience."
  },
  {
    image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/megaphone.svg",
    title: "Content Distribution",
    desc: "Multi-channel publishing, email marketing, and social amplification for reach."
  },
  {
    image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/brand-google-analytics.svg",
    title: "Content Performance Analytics",
    desc: "Track, measure, and optimize content with actionable insights and reporting."
  },
  {
    image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/brand-openai.svg",
    title: "AI-Assisted Content",
    desc: "Leverage AI tools for ideation, optimization, and scalable content production."
  },
  {
    image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/users-group.svg",
    title: "Thought Leadership",
    desc: "Executive ghostwriting, bylined articles, and expert interviews to build authority."
  },
  {
    image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/hand-click.svg",
    title: "Conversion Copywriting",
    desc: "Persuasive copy for ads, CTAs, and landing pages that turn readers into leads."
  }
];

// Why it matters (monochrome icons)
const whyMatters = [
  { image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/target.svg", title: "Attract Qualified Leads", desc: "Strategic content brings the right audience to you." },
  { image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/brand-hipchat.svg", title: "Build Brand Authority", desc: "Consistent, valuable content positions you as an industry leader." },
  { image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/chart-bar.svg", title: "Boost SEO & Visibility", desc: "Optimized content improves rankings and discoverability." },
  { image: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/handshake.svg", title: "Nurture Trust & Loyalty", desc: "Educational, helpful content builds lasting relationships." }
