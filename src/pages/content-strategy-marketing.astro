  { icon: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/brand-google-analytics.svg", title: "Measure & Optimize", desc: "We track performance and continuously refine your content for better results." }
];

// Case studies (content marketing examples)
const cases = [
  {
    client: "FinTech Insights",
    logo: "/blog/image1.png",
    summary: "Multi-channel content strategy and SEO blog program for a B2B fintech platform.",
    outcome: "+120% organic traffic, +60% demo requests in 9 months",
    quote: "“Tagorithm’s content team delivered results we could measure—our pipeline has never been stronger.”"
  },
  {
    client: "EcoHome Solutions",
    logo: "/blog/image2.png",
    summary: "Video and visual content campaign for a sustainable home brand.",
    outcome: "+40% social engagement, +25% newsletter signups",
    quote: "“The new content series made us stand out and connect with our ideal customers.”"
  }
];

// FAQs (content strategy/marketing specific)
const faqs = [
  {
    q: "What types of content do you create?",
    a: "We produce blog posts, web copy, video, infographics, case studies, whitepapers, email campaigns, and more."
  },
  {
    q: "How do you measure content success?",
    a: "We track KPIs like organic traffic, engagement, conversions, and SEO rankings, and provide regular reports."
  },
  {
    q: "Can you help with both strategy and execution?",
    a: "Yes! We offer end-to-end services from planning to production, distribution, and optimization."
  },
  {
    q: "Do you work with in-house teams?",
    a: "Absolutely—we can collaborate with your team or handle everything for you."
  },
  {
    q: "How quickly can we launch a content program?",
    a: "Most clients see their first content live within 2–4 weeks of kickoff."
  },
  {
    q: "Is your content SEO-optimized?",
    a: "Yes, all our content is created with SEO best practices in mind."
  },
