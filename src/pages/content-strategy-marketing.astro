// Redesigned Approach: Timeline with icons and subtle animation
const approach = [
  { icon: "https://cdn.jsdelivr.net/npm/@tabler/icons/icons/outline/compass.svg", title: "Discovery & Audit", desc: "We assess your current content, audience, and goals to identify opportunities." },
