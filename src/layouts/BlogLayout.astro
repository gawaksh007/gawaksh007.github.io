---
import MainLayout from "./MainLayout.astro";
import Section from "../components/sections/Section.astro";
import SectionTitle from "../components/ui/SectionTitle.astro";
import { Image } from "astro:assets";

const { frontmatter } = Astro.props;
---

<MainLayout title={frontmatter.title}>
  <main class="space-y-16">
    <!-- Hero Section -->
    <section class="relative min-h-[50vh] flex items-center overflow-hidden bg-gray-50">
      <div class="container mx-auto px-4 relative z-10">
        <div class="flex flex-col md:flex-row items-center justify-between gap-12">
          <!-- Left: Text Content -->
          <div class="md:w-1/2 space-y-8">
            <h1 class="text-5xl font-bold leading-tight animate-fade-in">
              {frontmatter.title}
            </h1>
            <div class="flex items-center gap-4 animate-fade-in-delay">
              <img 
                src={frontmatter.authImage} 
                alt={frontmatter.author}
                class="w-12 h-12 rounded-full"
              />
              <div>
                <p class="font-medium">{frontmatter.author}</p>
                <p class="text-gray-600">{new Date(frontmatter.pubDate).toLocaleDateString()}</p>
              </div>
            </div>
          </div>
          <!-- Right: Featured Image -->
          <div class="md:w-1/2">
            <img 
              src={frontmatter.image} 
              alt={frontmatter.title}
              class="w-full h-auto rounded-lg shadow-lg"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Blog Content -->
    <Section>
      <div class="container mx-auto px-4">
        <article class="prose prose-lg mx-auto">
          <slot /> <!-- This is where your markdown content will be rendered -->
        </article>
      </div>
    </Section>

    <!-- Recommended Blogs -->
    <Section>
      <div class="container mx-auto px-4">
        <SectionTitle 
          sectionTitle="Related Articles" 
          description="Explore more articles about photography and technology"
        />
        <div class="grid md:grid-cols-3 gap-8 mt-12">
          {/* Add recommended blog cards here */}
        </div>
      </div>
    </Section>
  </main>
</MainLayout>

<style>
  .prose {
    max-width: 65ch;
  }
</style>